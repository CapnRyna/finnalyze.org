---
interface Props {
	extraClasses?: string
}

const { extraClasses = '' } = Astro.props;
---

<div class=`card ${extraClasses}`>
    <slot />
</div>

<style>
    .card {
		background-color: var(--primary);
		width: 100%;
		padding: 1rem;
		border-radius: 0.5rem;
		border: 0.05rem solid var(--accent);
		color: var(--text);
    }
</style>