---
interface Props {
    tag: string;
}

const { tag } = Astro.props;
---

<div class="tag">
    <i class="fa-solid fa-tag"></i>
    {tag}
</div>

<style>
    .tag {
        display: inline-block;
        padding: 0.2rem 0.4rem;
        background-color: var(--gray-darker);
        color: var(--accent-light);
        border-radius: 0.4rem;
        font-size: 0.6rem;
        font-weight: bold;
    }

    .tag i {
        margin-right: 0.25rem;
        font-size: 0.8rem;
    }
</style>