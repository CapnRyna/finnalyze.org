---
import PostCard from '../components/PostCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Card from '../components/Card.astro';
import Tag from '../components/Tag.astro';

import { posts, tags } from '../content'
import Layout from './Layout.astro';

interface Props {
    tag?: typeof tags[number];
}

const { tag } = Astro.props as Props;

let allPosts = posts;

if (tag) {
	allPosts = posts.filter((post) => {
		return post.data.tags.includes(tag.name);
	});
}
---

<Layout title={tag ? `${tag.name} - ${SITE_TITLE}` : SITE_TITLE} description={SITE_DESCRIPTION}>
	{tag && (
		<h3 class="title">Posts tagged with "{tag.name}"</h3>
	)}

	<div class="container">
		<ul class="posts">
			<h3 class="mobile-title">
				{tag ? `Posts tagged with "${tag.name}"` : 'Posts'}
			</h3>
			
			{
				allPosts.map((post) => (
					<li>
						<PostCard id={post.id} post={post.data} />
					</li>
				))
			}
		</ul>
		<section class="side">
			<Card extraClasses="about">
				<img class="logo dark-only" src="/temp-logo.svg">
				<img class="logo light-only" src="/temp-logo-light.svg">
				Come show me how ye bury yer treasure, lad! Give me freedom or give me  the rope. For I shall not take the shackles that subjugate the poor to  uphold the rich. Yarrrr! there be ony two ranks of leader amongst us  pirates.
			</Card>
			<Card extraClasses="tags-card">
				<h3>Tags</h3>
				<ul class="tags">
					{tags.map((tag) => (
						<li>
							<a href={`/tags/${tag.slug}`} class="tag">
								<strong class="count">{tag.count}</spastrong>
								<Tag tag={tag.name} />
							</a>
						</li>
					))}
				</ul>
			</Card>
		</section>
	</div>
</Layout>
	
<style>
	.title {
		margin-top: 0;
		margin-bottom: 1rem;
	}

	.container {
		display: flex;
		gap: 1rem;
	}
	
	.side {
		font-size: 0.8rem;
		width: 21rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.side :global(.about) {
		text-align: justify;
		display: flex;
		flex-direction: column;
	}

	.side :global(.about) img {
		width: 7rem;;
		display: block;
		margin-bottom: 0.5rem;
	}

	.posts {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
		flex: 1;
	}

	h3 {
		margin-top: 0;
		margin-bottom: 0.5rem;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}

	.tags h2 {
		margin: 0;
	}

    .tags a {
        color: var(--text-light);
        text-decoration: none;
        font-size: 0.6rem;
        font-weight: 500;
    }

	.mobile-title {
		display: none;
	}

	@media (max-width: 1000px) {
		.container {
			flex-direction: column-reverse;
		}

		.side {
			width: 100%;
			margin-bottom: 2.5rem;
		}

		.title {
			display: none;
		}

		.mobile-title {
			display: block;
			text-align: center;
			margin-top: 0;
			font-size: 1.5rem;
			font-weight: 400;
		}

		.logo {
			display: none !important;
		}
	}
</style>